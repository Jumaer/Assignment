<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/launcherFragment">

    <fragment
        android:id="@+id/launcherFragment"
        android:name="com.periscope.jumaer.fragments.LauncherFragment"
        android:label="fragment_launcher"
        tools:layout="@layout/fragment_launcher" >
        <action
            android:id="@+id/action_launcherFragment_to_imageSliderFragment"
            app:destination="@id/imageSliderFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageSliderFragment"
        android:name="com.periscope.jumaer.fragments.ImageSliderFragment"
        android:label="fragment_image_slider"
        tools:layout="@layout/fragment_image_slider" />
</navigation>